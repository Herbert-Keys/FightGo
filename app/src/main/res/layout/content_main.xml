<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.herbert.fightgo.MainActivity"
    tools:showIn="@layout/app_bar_main"
    >
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

    </android.support.v7.widget.RecyclerView>
    <Button
        android:visibility="gone"
        android:id="@+id/bt_toSrcollingActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ScrollingActivity!"
         />
    <Button
        android:visibility="gone"
        android:id="@+id/bt_bottomNavigationActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BottomNavigationActivity"
        app:layout_constraintTop_toBottomOf="@id/bt_toSrcollingActivity"
        />
    <Button
        android:visibility="gone"
        android:id="@+id/bt_FullScreenActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FullScreenActivity"
        app:layout_constraintTop_toBottomOf="@id/bt_bottomNavigationActivity"
        />

</FrameLayout>
